@import 'nib/gradients'
@import 'nib/vendor'

html,
body
    width 100%
    height 100%
    text-align center

h1
    color $h1Color
    background #fff
    background-image linear-gradient(top, #f6f6f6, #e9e9e9)
    box-shadow 1px 1px 0 #fff inset, 1px 1px 2px #000
    margin 1em 3em 0
    border-radius 3px
